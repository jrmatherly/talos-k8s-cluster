#% if agentgateway_addr is defined %#
---
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: kgateway
spec:
  chartRef:
    kind: OCIRepository
    name: kgateway
  interval: 1h
  values:
    agentgateway:
      enabled: true
    controller:
      extraEnv:
        KGW_ENABLE_GATEWAY_API_EXPERIMENTAL_FEATURES: "true"
#% if agentgateway_observability_enabled | default(true) %#
    # Observability configuration
    observability:
      metrics:
        enabled: true
        port: 15020
#% if otel_collector_endpoint is defined %#
      tracing:
        enabled: true
        # OTLP gRPC endpoint for distributed tracing
        # Format: http://<service>.<namespace>:<port> (port 4317 for gRPC)
        otlpEndpoint: "http://#{ otel_collector_endpoint }#"
#% endif %#
#% endif %#
#% endif %#
