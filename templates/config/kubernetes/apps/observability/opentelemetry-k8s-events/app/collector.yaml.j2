#% if opentelemetry_k8s_events_enabled | default(victoria_logs_enabled) %#
---
#| OpenTelemetry Collector - Kubernetes Events Receiver #|
#| Watches all K8s events and exports to VictoriaLogs via OTLP HTTP #|
#| REF: https://github.com/open-telemetry/opentelemetry-collector-contrib/tree/main/receiver/k8seventsreceiver #|
#| REF: https://docs.victoriametrics.com/victorialogs/data-ingestion/opentelemetry/ #|
apiVersion: opentelemetry.io/v1beta1
kind: OpenTelemetryCollector
metadata:
  name: k8s-events
  labels:
    app.kubernetes.io/name: opentelemetry-k8s-events
spec:
  #| Use contrib image which includes k8seventsreceiver (v0.142.0 Dec 2025) #|
  image: otel/opentelemetry-collector-contrib:0.142.0
  mode: deployment
  replicas: 1
  #| Resource limits #|
  resources:
    requests:
      cpu: "50m"
      memory: "64Mi"
    limits:
      cpu: "200m"
      memory: "256Mi"
  #| Collector configuration #|
  config:
    receivers:
      #| k8s_events receiver - watches Kubernetes events API #|
      k8s_events:
        #| Empty namespaces = watch all namespaces #|
        namespaces: []
    processors:
      #| Batch processor for efficient export #|
      batch:
        timeout: 10s
        send_batch_size: 100
      #| Memory limiter to prevent OOM #|
      memory_limiter:
        check_interval: 1s
        limit_percentage: 80
        spike_limit_percentage: 25
    exporters:
      #| Export to VictoriaLogs via OTLP HTTP #|
      #| REF: https://docs.victoriametrics.com/victorialogs/data-ingestion/opentelemetry/ #|
      otlphttp/victorialogs:
        endpoint: http://victoria-logs-server.observability.svc.cluster.local:9428/insert/opentelemetry
        tls:
          insecure: true
      #| Debug exporter for troubleshooting (disabled by default) #|
      #| Uncomment to see events in collector logs #|
      # debug:
      #   verbosity: detailed
    service:
      pipelines:
        logs:
          receivers: [k8s_events]
          processors: [memory_limiter, batch]
          exporters: [otlphttp/victorialogs]
#% endif %#
