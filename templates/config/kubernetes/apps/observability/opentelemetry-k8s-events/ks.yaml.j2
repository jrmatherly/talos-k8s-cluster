#% if opentelemetry_k8s_events_enabled | default(victoria_logs_enabled) %#
---
#| OpenTelemetry Kubernetes Events Collector #|
#| Captures ephemeral K8s events and forwards to VictoriaLogs #|
#| REF: https://github.com/open-telemetry/opentelemetry-collector-contrib/tree/main/receiver/k8seventsreceiver #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: opentelemetry-k8s-events
  namespace: flux-system
spec:
  path: ./kubernetes/apps/observability/opentelemetry-k8s-events/app
  targetNamespace: observability
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  commonMetadata:
    labels:
      app.kubernetes.io/name: opentelemetry-k8s-events
  wait: true
  interval: 30m
  retryInterval: 1m
  timeout: 5m
  prune: true
  dependsOn:
    - name: opentelemetry-operator
      namespace: flux-system
    - name: victoria-logs
      namespace: flux-system
#% endif %#
