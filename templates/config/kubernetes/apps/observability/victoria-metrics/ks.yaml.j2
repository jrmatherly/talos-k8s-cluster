#% if victoria_metrics_enabled %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: victoria-metrics
  namespace: flux-system
spec:
  targetNamespace: observability
  commonMetadata:
    labels:
      app.kubernetes.io/name: victoria-metrics
  path: ./kubernetes/apps/observability/victoria-metrics/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  wait: true
  interval: 30m
  retryInterval: 1m
  timeout: 10m
  dependsOn:
    - name: cilium
      namespace: kube-system
#% if minio_enabled %#
    #| Grafana dashboardsConfigMaps requires ConfigMaps to exist before pod starts #|
    - name: minio-dashboards
#% endif %#
#% if obot_enabled and tempo_enabled %#
    - name: obot-dashboards
#% endif %#
#% endif %#
