#% if kubernetes_event_exporter_enabled | default(victoria_logs_enabled) %#
---
#| Kubernetes Event Exporter - forward K8s events to VictoriaLogs #|
#| Events are ephemeral (~1 hour) - this preserves them for debugging #|
#| REF: https://github.com/resmoio/kubernetes-event-exporter #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: kubernetes-event-exporter
spec:
  commonMetadata:
    labels:
      app.kubernetes.io/name: kubernetes-event-exporter
  path: ./kubernetes/apps/observability/kubernetes-event-exporter/app
  targetNamespace: observability
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  wait: true
  interval: 30m
  retryInterval: 1m
  timeout: 5m
  prune: true
  dependsOn:
    - name: victoria-logs
#% endif %#
