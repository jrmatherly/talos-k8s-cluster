#% if opentelemetry_operator_enabled | default(victoria_logs_enabled) %#
---
#| OpenTelemetry Operator - Kubernetes operator for OTEL collectors #|
#| REF: https://opentelemetry.io/docs/kubernetes/operator/ #|
#| REF: https://github.com/open-telemetry/opentelemetry-operator #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: opentelemetry-operator
spec:
  chart:
    spec:
      chart: opentelemetry-operator
      #| Chart 0.101.0 = Operator v0.140.0 (Dec 2025) #|
      version: "0.101.0"
      sourceRef:
        kind: HelmRepository
        name: opentelemetry
  interval: 1h
  values:
    #| Use the k8s distribution collector image for better K8s integration #|
    manager:
      collectorImage:
        repository: ghcr.io/open-telemetry/opentelemetry-collector-releases/opentelemetry-collector-k8s
      #| Resource limits for the operator manager #|
      resources:
        requests:
          cpu: "50m"
          memory: "128Mi"
        limits:
          cpu: "200m"
          memory: "256Mi"
    #| Enable admission webhooks for CRD validation #|
    admissionWebhooks:
      create: true
      certManager:
        enabled: true
#% endif %#
