#% if minio_enabled and victoria_metrics_enabled %#
---
#| Flux Kustomization for MinIO Grafana dashboards #|
#| Deploys dashboard ConfigMaps to observability namespace #|
#| (separate from minio app to avoid namespace override) #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: minio-dashboards
  namespace: flux-system
spec:
  #| NOTE: ConfigMaps must exist before victoria-metrics HelmRelease #|
  #| because Grafana mounts them via dashboardsConfigMaps #|
  dependsOn:
    - name: minio
      namespace: storage
  interval: 1h
  timeout: 5m
  path: ./kubernetes/apps/observability/minio-dashboards/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: observability
  wait: false
#% endif %#
