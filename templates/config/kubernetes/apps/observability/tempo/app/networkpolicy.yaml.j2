#% if tempo_enabled %#
---
#| NetworkPolicy for Tempo - allow OTLP ingestion and Grafana queries #|
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: tempo
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: tempo
  policyTypes:
    - Ingress
    - Egress
  ingress:
    #| OTLP gRPC from kgateway/agentgateway (network namespace) #|
#% if kgateway_tracing_enabled %#
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: network
      ports:
        - protocol: TCP
          port: 4317
    #| OTLP gRPC from agentgateway-system #|
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: agentgateway-system
      ports:
        - protocol: TCP
          port: 4317
#% endif %#
    #| OTLP gRPC from kagent #|
#% if kagent_enabled and kagent_otlp_enabled %#
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: kagent
      ports:
        - protocol: TCP
          port: 4317
#% endif %#
    #| OTLP gRPC from obot OTEL collector #|
#% if obot_enabled and obot_otel_enabled %#
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: obot
          podSelector:
            matchLabels:
              app.kubernetes.io/name: obot-otel-gateway
      ports:
        - protocol: TCP
          port: 4317
#% endif %#
    #| Query API from Grafana #|
    - from:
        - podSelector:
            matchLabels:
              app.kubernetes.io/name: grafana
      ports:
        - protocol: TCP
          port: 3200
    #| Prometheus metrics scraping #|
    - from:
        - podSelector: {}
      ports:
        - protocol: TCP
          port: 3200
  egress:
    #| DNS #|
    - to:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: kube-system
      ports:
        - protocol: UDP
          port: 53
        - protocol: TCP
          port: 53
#% if minio_enabled %#
    #| MinIO S3 storage #|
    - to:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: storage
          podSelector:
            matchLabels:
              app: minio
      ports:
        - protocol: TCP
          port: 9000
#% endif %#
#% if victoria_metrics_enabled %#
    #| VictoriaMetrics for metrics generator remote write #|
    - to:
        - podSelector:
            matchLabels:
              app.kubernetes.io/name: vmsingle
      ports:
        - protocol: TCP
          port: 8428
#% endif %#
#% endif %#
