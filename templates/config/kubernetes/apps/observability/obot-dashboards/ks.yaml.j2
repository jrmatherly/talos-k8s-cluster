#% if obot_enabled and tempo_enabled and victoria_metrics_enabled %#
---
#| Flux Kustomization for Obot APM Grafana dashboard #|
#| Deploys dashboard ConfigMap to observability namespace #|
#| (separate from obot app to avoid namespace override) #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: obot-dashboards
  namespace: flux-system
spec:
  #| NOTE: ConfigMaps must exist before victoria-metrics HelmRelease #|
  #| because Grafana mounts them via dashboardsConfigMaps #|
  dependsOn:
    - name: tempo
    - name: obot
      namespace: obot
  interval: 1h
  timeout: 5m
  path: ./kubernetes/apps/observability/obot-dashboards/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: observability
  wait: false
#% endif %#
