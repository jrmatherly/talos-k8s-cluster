#% if keycloak_enabled and (agentgateway_enabled | default(false) or kgateway_oauth2_enabled | default(false)) %#
---
#| ============================================================ #|
#| ReferenceGrant: Allow gateway services to access Keycloak    #|
#| Required for MCP OAuth JWKS validation and OAuth2 token flow #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1beta1
kind: ReferenceGrant
metadata:
  name: gateway-keycloak-access
spec:
  from:
#% if agentgateway_enabled | default(false) %#
    #| Allow AgentgatewayPolicy from agentgateway-system namespace #|
    - group: agentgateway.dev
      kind: AgentgatewayPolicy
      namespace: agentgateway-system
    #| Allow AgentgatewayPolicy from network namespace #|
    - group: agentgateway.dev
      kind: AgentgatewayPolicy
      namespace: network
    #| Allow HTTPRoute from agentgateway-system namespace #|
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      namespace: agentgateway-system
#% endif %#
#% if kgateway_oauth2_enabled | default(false) %#
    #| Allow GatewayExtension from network namespace for OAuth2 #|
    - group: gateway.kgateway.dev
      kind: GatewayExtension
      namespace: network
#% endif %#
    #| Allow HTTPRoute from network namespace (for backend refs) #|
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      namespace: network
  to:
    #| Grant access to Keycloak HTTP service #|
    - group: ""
      kind: Service
      name: keycloak-http
#% endif %#
