#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| agentgateway CRDs - AI/MCP Gateway API extensions             #|
#| API Group: agentgateway.dev/v1alpha1                          #|
#| Provides: AgentgatewayPolicy, AgentgatewayBackend, etc.       #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: agentgateway-crds
spec:
  chart:
    spec:
      chart: agentgateway-crds
      version: "#{ agentgateway_version | default('v2.2.0-beta.3') }#"
      sourceRef:
        kind: HelmRepository
        name: agentgateway
  interval: 1h
  timeout: 5m
  install:
    crds: CreateReplace
    remediation:
      retries: 3
  upgrade:
    crds: CreateReplace
    remediation:
      retries: 3
#% endif %#
