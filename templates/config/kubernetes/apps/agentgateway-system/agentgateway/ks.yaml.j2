#% if agentgateway_enabled | default(true) %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: agentgateway
spec:
  dependsOn:
    - name: agentgateway-crds
      namespace: agentgateway-system
    - name: cilium
      namespace: kube-system
  interval: 1h
  timeout: 10m
  path: ./kubernetes/apps/agentgateway-system/agentgateway/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: agentgateway-system
  wait: true
  postBuild:
    substituteFrom:
      - kind: Secret
        name: cluster-secrets
#% endif %#
