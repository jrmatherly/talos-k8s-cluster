#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| agentgateway controller - AI/MCP Gateway control plane        #|
#| Controller: agentgateway.dev/agentgateway                     #|
#| REF: https://kgateway.dev/docs/agentgateway/main/             #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: agentgateway
spec:
  chart:
    spec:
      chart: agentgateway
      version: "#{ agentgateway_version | default('v2.2.0-beta.4') }#"
      sourceRef:
        kind: HelmRepository
        name: agentgateway
  interval: 1h
  timeout: 15m
  dependsOn:
    - name: agentgateway-crds
  values:
    #| ============================================================ #|
    #| Controller Configuration                                     #|
    #| ============================================================ #|
    controller:
      logLevel: info
      replicaCount: 1
      image:
        pullPolicy: IfNotPresent
      # Network policy labels for CCNP tiered policies
      podLabels:
        network.cilium.io/api-access: "true"

    #| ============================================================ #|
    #| Resource Limits                                              #|
    #| ============================================================ #|
    resources:
      requests:
        cpu: 100m
        memory: 128Mi
      limits:
        cpu: 500m
        memory: 512Mi

    #| ============================================================ #|
    #| GatewayClass Parameters Reference                            #|
    #| Map GatewayClass to AgentgatewayParameters resource           #|
    #| ============================================================ #|
    gatewayClassParametersRefs:
      agentgateway:
        group: agentgateway.dev
        kind: AgentgatewayParameters
        name: agw-params
        namespace: agentgateway-system

    #| ============================================================ #|
    #| Namespace Discovery                                          #|
    #| Allow agentgateway to discover resources across namespaces   #|
    #| ============================================================ #|
    discoveryNamespaceSelectors:
      - matchLabels:
          kubernetes.io/metadata.name: agentgateway-system
      - matchLabels:
          kubernetes.io/metadata.name: ai-system
      - matchLabels:
          kubernetes.io/metadata.name: keycloak
      - matchLabels:
          kubernetes.io/metadata.name: obot
      - matchLabels:
          kubernetes.io/metadata.name: network
#% if kagent_enabled | default(false) %#
      - matchLabels:
          kubernetes.io/metadata.name: kagent
#% endif %#
#% if flux_mcp_enabled | default(false) %#
      - matchLabels:
          kubernetes.io/metadata.name: flux-system
#% endif %#
#% endif %#
