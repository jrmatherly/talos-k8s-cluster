#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| AgentgatewayParameters - Gateway deployment configuration     #|
#| Referenced by GatewayClass for data plane customization       #|
#| API: agentgateway.dev/v1alpha1                                #|
#| ============================================================ #|
apiVersion: agentgateway.dev/v1alpha1
kind: AgentgatewayParameters
metadata:
  name: agw-params
spec:
  #| Logging configuration #|
  logging:
    level: info
  #| Resource limits for agentgateway data plane #|
  resources:
    requests:
      cpu: 100m
      memory: 128Mi
    limits:
      cpu: 500m
      memory: 512Mi
---
#| ============================================================ #|
#| GatewayClass for agentgateway (AI/MCP data plane)             #|
#| Controller: agentgateway.dev/agentgateway                     #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: GatewayClass
metadata:
  name: agentgateway
spec:
  controllerName: agentgateway.dev/agentgateway
  parametersRef:
    group: agentgateway.dev
    kind: AgentgatewayParameters
    name: agw-params
---
#| ============================================================ #|
#| AgentGateway - AI/MCP Gateway                                 #|
#| LoadBalancer IP: #{ agentgateway_addr }#                      #|
#| Handles: LLM routing, MCP OAuth, AI traffic                   #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: agentgateway
  annotations:
    external-dns.alpha.kubernetes.io/target: ai-gw.${SECRET_DOMAIN}
spec:
  gatewayClassName: agentgateway
  infrastructure:
    annotations:
      external-dns.alpha.kubernetes.io/hostname: ai-gw.${SECRET_DOMAIN}
      io.cilium/lb-ipam-ips: "#{ agentgateway_addr }#"
  listeners:
    - name: http
      protocol: HTTP
      port: 80
      allowedRoutes:
        namespaces:
          from: Same
    - name: https
      protocol: HTTPS
      port: 443
      allowedRoutes:
        namespaces:
          from: All
      tls:
        #| agentgateway only supports exactly 1 certificateRef #|
        certificateRefs:
          - kind: Secret
            name: #{ primary_domain | replace('.', '-') }#-production-tls
            namespace: network
#% endif %#
