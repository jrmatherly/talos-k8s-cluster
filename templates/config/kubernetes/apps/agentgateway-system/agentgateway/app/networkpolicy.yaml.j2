#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| NetworkPolicy for agentgateway controller                     #|
#| ============================================================ #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: agentgateway-controller
spec:
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: agentgateway
  ingress:
    #| xDS from agentgateway proxies (port 9978) #|
    - fromEndpoints:
        - matchLabels:
            gateway.networking.k8s.io/gateway-name: ai-gateway
      toPorts:
        - ports:
            - port: "9978"
              protocol: TCP
    #| Metrics from Prometheus #|
    - fromEndpoints:
        - matchLabels:
            app.kubernetes.io/name: prometheus
      toPorts:
        - ports:
            - port: "9091"
              protocol: TCP
            - port: "15020"
              protocol: TCP
  egress:
    #| K8s API access #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
    #| Egress to Keycloak for JWKS fetching (MCP OAuth) #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: keycloak
            app.kubernetes.io/name: keycloak
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
---
#| ============================================================ #|
#| NetworkPolicy for ai-gateway data plane                       #|
#| ============================================================ #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: ai-gateway-dataplane
spec:
  endpointSelector:
    matchLabels:
      gateway.networking.k8s.io/gateway-name: ai-gateway
  ingress:
    #| HTTP/HTTPS from external (LoadBalancer) #|
    - fromEntities:
        - world
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
            - port: "8443"
              protocol: TCP
  egress:
    #| xDS to agentgateway controller (port 9978) #|
    - toEndpoints:
        - matchLabels:
            app.kubernetes.io/name: agentgateway
      toPorts:
        - ports:
            - port: "9978"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
    #| Egress to backend services (LiteLLM, MCP servers) #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: ai-system
      toPorts:
        - ports:
            - port: "4000"
              protocol: TCP
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: obot
      toPorts:
        - ports:
            - port: "80"
              protocol: TCP
    #| Egress to Keycloak for JWKS validation (MCP OAuth) #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: keycloak
            app.kubernetes.io/name: keycloak
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
    #| Egress to kagent namespace for MCP tool servers #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kagent
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
#% endif %#
