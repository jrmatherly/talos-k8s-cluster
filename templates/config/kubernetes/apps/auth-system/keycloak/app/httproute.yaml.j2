#| Keycloak HTTPRoute for internal access via Envoy Gateway #|
#% if mcp_gateway_enabled %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: keycloak
  labels:
    app: keycloak
    app.kubernetes.io/name: keycloak
    app.kubernetes.io/component: authorization-server
    app.kubernetes.io/part-of: mcp-gateway
spec:
  parentRefs:
    #| Attach to external gateway - Keycloak must NOT have OIDC policy applied #|
    #| (OIDC policy on envoy-internal interferes with Keycloak's own login flow) #|
    - name: envoy-external
      namespace: network
      sectionName: https
  hostnames:
    - auth.#{ primary_domain }#
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: keycloak
          port: 8080
#% endif %#
