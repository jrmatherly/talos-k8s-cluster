#| Keycloak HTTPRoute via dedicated auth gateway (no OIDC policy) #|
#| Uses envoy-auth gateway which is NOT protected by OIDC SecurityPolicy #|
#| This prevents login loop when envoy-external has OIDC policy attached #|
#% if mcp_gateway_enabled and auth_gateway_addr %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: keycloak
  labels:
    app: keycloak
    app.kubernetes.io/name: keycloak
    app.kubernetes.io/component: authorization-server
    app.kubernetes.io/part-of: auth-system
spec:
  parentRefs:
    #| Attach to dedicated auth gateway - Keycloak must NOT have OIDC policy applied #|
    #| The envoy-auth gateway has no SecurityPolicy attached #|
    - name: envoy-auth
      namespace: network
      sectionName: https
  hostnames:
    - auth.#{ primary_domain }#
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: keycloak
          port: 8080
#% endif %#
