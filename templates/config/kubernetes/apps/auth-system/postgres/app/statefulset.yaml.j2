#| PostgreSQL StatefulSet for Keycloak backend database #|
#| Uses Bitnami PostgreSQL for non-root operation in restricted PSS #|
#| Reference: https://github.com/bitnami/containers/blob/main/bitnami/postgresql/README.md #|
#% if mcp_gateway_enabled %#
---
apiVersion: apps/v1
kind: StatefulSet
metadata:
  name: keycloak-postgres
  labels:
    app: keycloak-postgres
    app.kubernetes.io/name: postgresql
    app.kubernetes.io/component: database
    app.kubernetes.io/part-of: mcp-gateway
spec:
  replicas: 1
  serviceName: keycloak-postgres
  selector:
    matchLabels:
      app: keycloak-postgres
  template:
    metadata:
      labels:
        app: keycloak-postgres
        app.kubernetes.io/name: postgresql
        app.kubernetes.io/component: database
        app.kubernetes.io/part-of: mcp-gateway
    spec:
      #| Pod Security Context for restricted namespace #|
      #| Bitnami PostgreSQL runs as UID 1001 by default #|
      securityContext:
        runAsNonRoot: true
        runAsUser: 1001
        runAsGroup: 1001
        fsGroup: 1001
        seccompProfile:
          type: RuntimeDefault

      containers:
        - name: postgres
          image: bitnami/postgresql:#{ keycloak_postgres_version | default('16') }#
          imagePullPolicy: IfNotPresent
          securityContext:
            allowPrivilegeEscalation: false
            readOnlyRootFilesystem: false
            capabilities:
              drop:
                - ALL
          env:
            #| Bitnami uses POSTGRESQL_* prefix instead of POSTGRES_* #|
            - name: POSTGRESQL_DATABASE
              value: keycloak
            - name: POSTGRESQL_USERNAME
              valueFrom:
                secretKeyRef:
                  name: keycloak-postgres-secret
                  key: username
            - name: POSTGRESQL_PASSWORD
              valueFrom:
                secretKeyRef:
                  name: keycloak-postgres-secret
                  key: password
          ports:
            - name: postgres
              containerPort: 5432
              protocol: TCP
          volumeMounts:
            #| Bitnami uses /bitnami/postgresql instead of /var/lib/postgresql/data #|
            - name: postgres-data
              mountPath: /bitnami/postgresql
          resources:
            requests:
              cpu: 250m
              memory: 512Mi
            limits:
              cpu: 1000m
              memory: 1Gi
          livenessProbe:
            exec:
              command:
                - /bin/sh
                - -c
                - pg_isready -U keycloak -d keycloak
            initialDelaySeconds: 30
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 6
          readinessProbe:
            exec:
              command:
                - /bin/sh
                - -c
                - pg_isready -U keycloak -d keycloak
            initialDelaySeconds: 5
            periodSeconds: 10
            timeoutSeconds: 5
            failureThreshold: 6

  volumeClaimTemplates:
    - metadata:
        name: postgres-data
        labels:
          app: keycloak-postgres
      spec:
        accessModes:
          - ReadWriteOnce
        storageClassName: #{ mcp_storage_class | default('proxmox-csi') }#
        resources:
          requests:
            storage: #{ keycloak_postgres_storage_size | default('10Gi') }#
#% endif %#
