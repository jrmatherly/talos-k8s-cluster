#| Auth-System Kustomization for MCP Authorization Gateway components #|
#| Includes: PostgreSQL, Redis, Keycloak #|
#% if mcp_gateway_enabled %#
---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: auth-system

components:
  - ../../components/sops

resources:
  - ./namespace.yaml
  - ./postgres/ks.yaml
  - ./redis/ks.yaml
  - ./keycloak/ks.yaml
#% endif %#
