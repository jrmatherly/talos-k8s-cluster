#| Redis credentials for MCP Gateway session state #|
#| Encrypted with SOPS/age #|
#% if mcp_gateway_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: mcp-redis-secret
  labels:
    app: mcp-redis
    app.kubernetes.io/name: redis
    app.kubernetes.io/component: session-state
    app.kubernetes.io/part-of: mcp-gateway
type: Opaque
stringData:
  password: #{ mcp_redis_password }#
#% endif %#
