#% if traceloop_enabled and traceloop_hub_enabled %#
---
apiVersion: monitoring.coreos.com/v1
kind: ServiceMonitor
metadata:
  name: traceloop-hub
spec:
  endpoints:
    - port: http
      path: /metrics
      interval: 30s
  namespaceSelector:
    matchNames:
      - traceloop
  selector:
    matchLabels:
      app.kubernetes.io/name: helm-hub
#% endif %#
