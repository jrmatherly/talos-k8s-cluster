#% if traceloop_enabled and traceloop_hub_enabled %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: traceloop-hub
spec:
  parentRefs:
    - name: envoy-internal
      namespace: network
  hostnames:
    - hub.traceloop.#{ primary_domain }#
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /
      backendRefs:
        - name: traceloop-hub
          port: 3100
      timeouts:
        request: 300s  # Extended timeout for LLM responses
#% endif %#
