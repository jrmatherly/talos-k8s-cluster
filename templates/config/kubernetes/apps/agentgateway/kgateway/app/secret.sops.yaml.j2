#% if agentgateway_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: agentgateway-keycloak-secret
type: Opaque
stringData:
  client-id: "agentgateway-mcp"
  client-secret: "#{ keycloak_agentgateway_client_secret | default(keycloak_oidc_client_secret) }#"
#% if azure_openai_us_east_api_key %#
---
#| Azure OpenAI US East API Key for AI Backend #|
apiVersion: v1
kind: Secret
metadata:
  name: azure-openai-us-east-secret
type: Opaque
stringData:
  api-key: "#{ azure_openai_us_east_api_key }#"
#% endif %#
#% if azure_openai_us_east2_api_key %#
---
#| Azure OpenAI US East2 API Key for AI Backend #|
apiVersion: v1
kind: Secret
metadata:
  name: azure-openai-us-east2-secret
type: Opaque
stringData:
  api-key: "#{ azure_openai_us_east2_api_key }#"
#% endif %#
#% endif %#
