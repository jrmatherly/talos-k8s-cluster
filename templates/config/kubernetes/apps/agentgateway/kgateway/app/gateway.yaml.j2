#% if agentgateway_enabled %#
---
#| Gateway API GatewayClass for agentgateway #|
#| Uses kgateway controller with agentgateway data plane #|
apiVersion: gateway.networking.k8s.io/v1
kind: GatewayClass
metadata:
  name: agentgateway
spec:
  #| Use agentgateway controller (not kgateway) for MCP/AI features #|
  controllerName: kgateway.dev/agentgateway
  description: "agentgateway for MCP protocol support with OAuth authentication"
  parametersRef:
    group: gateway.kgateway.dev
    kind: GatewayParameters
    name: agentgateway-params
    namespace: agentgateway
---
#| Gateway instance with LoadBalancer #|
#| Provides HTTPS termination for MCP clients #|
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: agentgateway
spec:
  gatewayClassName: agentgateway
  #| Infrastructure annotations propagate to Service #|
  infrastructure:
    annotations:
      lbipam.cilium.io/ips: "#{ agentgateway_addr }#"
  listeners:
    #| HTTP listener for redirect to HTTPS #|
    - name: http
      protocol: HTTP
      port: 80
      allowedRoutes:
        namespaces:
          from: All
    #| HTTPS listener for secure MCP traffic #|
    - name: https
      protocol: HTTPS
      port: 443
      tls:
        mode: Terminate
        certificateRefs:
          - name: agentgateway-tls
            kind: Secret
      allowedRoutes:
        namespaces:
          from: All
    #| MCP SSE listener (port 3000 for agentgateway internal) #|
    - name: mcp
      protocol: HTTP
      port: 3000
      allowedRoutes:
        namespaces:
          from: Same
    #| Admin UI listener (port 15000 for agentgateway admin interface) #|
    - name: admin
      protocol: HTTP
      port: 15000
      allowedRoutes:
        namespaces:
          from: Same
---
#| Certificate for agentgateway #|
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: agentgateway-tls
spec:
  secretName: agentgateway-tls
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - "mcp-auth.#{ primary_domain }#"
---
#| HTTPRoute for HTTP to HTTPS redirect #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: agentgateway-https-redirect
spec:
  parentRefs:
  - name: agentgateway
    namespace: agentgateway
    sectionName: http
  hostnames:
  - "mcp-auth.#{ primary_domain }#"
  rules:
  - filters:
    - type: RequestRedirect
      requestRedirect:
        scheme: https
        statusCode: 301
#% endif %#
