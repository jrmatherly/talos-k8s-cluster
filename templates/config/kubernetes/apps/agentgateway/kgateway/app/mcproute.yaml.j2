#% if agentgateway_enabled %#
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: agentgateway-config
data:
  config.yaml: |
    # Listener binds for agentgateway
    binds:
    - port: 3000
      listeners:
      - routes:
        - name: mcp-authenticated
          # MCP Authentication Configuration
          # Implements MCP Authorization spec (RFC 9728 Protected Resource Metadata)
          policies:
            mcpAuthentication:
              # Keycloak issuer URL (realm endpoint)
              issuer: "https://auth.#{ primary_domain }#/realms/k8s-cluster"
              # JWKS endpoint for JWT token validation
              jwksUrl: "https://auth.#{ primary_domain }#/realms/k8s-cluster/protocol/openid-connect/certs"
              # Keycloak provider - handles DCR wrapping and CORS
              provider:
                keycloak: {}
              # Protected Resource Metadata (RFC 9728)
              resourceMetadata:
                resource: "https://mcp-auth.#{ primary_domain }#/mcp"
                scopesSupported:
#% for scope in agentgateway_scopes | default(['openid', 'profile', 'email', 'offline_access']) %#
                - "#{ scope }#"
#% endfor %#
                bearerMethodsSupported:
                - header
                - body
                - query
                resourceDocumentation: "https://mcp-auth.#{ primary_domain }#/docs"
                resourcePolicyUri: "https://mcp-auth.#{ primary_domain }#/policies"
            # CORS policy for MCP clients
            cors:
              allowOrigins:
              - "https://*.#{ primary_domain }#"
              allowHeaders:
              - mcp-protocol-version
              - content-type
              - cache-control
              - authorization
              allowMethods:
              - GET
              - POST
              - OPTIONS
              exposeHeaders:
              - mcp-session-id
          # MCP Backend Targets
          backends:
          - mcp:
              targets:
              # Placeholder for MCP tool servers
              # Users should add their MCP servers here
              - name: example-tools
                stdio:
                  cmd: echo
                  args: ["MCP backend not configured"]
---
#| GatewayParameters to configure agentgateway with our config #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: GatewayParameters
metadata:
  name: agentgateway-params
spec:
  kube:
    deployment:
      replicas: 2
    service:
      type: LoadBalancer
    agentgateway:
      #| Reference the ConfigMap for agentgateway configuration #|
      customConfigMapName: agentgateway-config
---
#| HTTPRoute for web traffic to the agentgateway UI #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: agentgateway-ui
spec:
  parentRefs:
  - name: agentgateway
    namespace: agentgateway
    sectionName: https
  hostnames:
  - "mcp-auth.#{ primary_domain }#"
  rules:
  - matches:
    - path:
        type: PathPrefix
        value: /ui
    backendRefs:
    - name: agentgateway
      port: 15000
  #| Health check endpoint #|
  - matches:
    - path:
        type: Exact
        value: /healthz
    backendRefs:
    - name: agentgateway
      port: 15000
---
#| TrafficPolicy for rate limiting #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: TrafficPolicy
metadata:
  name: agentgateway-rate-limit
spec:
  targetRefs:
  - group: gateway.networking.k8s.io
    kind: Gateway
    name: agentgateway
  rateLimit:
    local:
      requests: 100
      unit: MINUTE
---
#| HTTPListenerPolicy for access logging #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: HTTPListenerPolicy
metadata:
  name: agentgateway-logging
spec:
  targetRefs:
  - group: gateway.networking.k8s.io
    kind: Gateway
    name: agentgateway
  accessLog:
  - fileSink:
      path: /dev/stdout
      jsonFormat:
        timestamp: "%START_TIME%"
        method: "%REQ(:METHOD)%"
        path: "%REQ(X-ENVOY-ORIGINAL-PATH?:PATH)%"
        protocol: "%PROTOCOL%"
        responseCode: "%RESPONSE_CODE%"
        responseFlags: "%RESPONSE_FLAGS%"
        bytesReceived: "%BYTES_RECEIVED%"
        bytesSent: "%BYTES_SENT%"
        duration: "%DURATION%"
        upstreamHost: "%UPSTREAM_HOST%"
        userAgent: "%REQ(USER-AGENT)%"
        requestId: "%REQ(X-REQUEST-ID)%"
        authority: "%REQ(:AUTHORITY)%"
#% endif %#
