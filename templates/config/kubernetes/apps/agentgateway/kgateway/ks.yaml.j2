#% if agentgateway_enabled %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: kgateway
  namespace: flux-system
spec:
  interval: 1h
  timeout: 10m
  path: ./kubernetes/apps/agentgateway/kgateway/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
  wait: true
  dependsOn:
    - name: keycloak
      namespace: flux-system
    - name: cilium
      namespace: flux-system
  postBuild:
    substituteFrom:
      - kind: Secret
        name: cluster-secrets
#% endif %#
