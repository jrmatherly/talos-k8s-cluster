#% if kgateway_enabled | default(true) %#
#% if agentgateway_enabled | default(false) %#
---
#| ============================================================ #|
#| ReferenceGrant - Allow agentgateway-system to access TLS     #|
#| secrets in the network namespace                              #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1beta1
kind: ReferenceGrant
metadata:
  name: agentgateway-tls-secrets
spec:
  from:
    - group: gateway.networking.k8s.io
      kind: Gateway
      namespace: agentgateway-system
  to:
    - group: ""
      kind: Secret
#% endif %#
#% endif %#
