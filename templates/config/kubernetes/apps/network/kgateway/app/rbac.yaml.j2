#% if kgateway_enabled | default(true) and agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| ClusterRole for kgateway to access agentgateway CRDs         #|
#| Required for kgateway to watch/list agentgateway resources   #|
#| ============================================================ #|
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRole
metadata:
  name: kgateway-agentgateway-access
  labels:
    app.kubernetes.io/name: kgateway
    app.kubernetes.io/component: rbac
rules:
  - apiGroups:
      - agentgateway.dev
    resources:
      - agentgatewaybackends
      - agentgatewaypolicies
      - agentgatewayparameters
    verbs:
      - get
      - list
      - watch
---
#| ============================================================ #|
#| ClusterRoleBinding for kgateway service account              #|
#| Binds the agentgateway access role to kgateway SA            #|
#| ============================================================ #|
apiVersion: rbac.authorization.k8s.io/v1
kind: ClusterRoleBinding
metadata:
  name: kgateway-agentgateway-access
  labels:
    app.kubernetes.io/name: kgateway
    app.kubernetes.io/component: rbac
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: kgateway-agentgateway-access
subjects:
  - kind: ServiceAccount
    name: kgateway
    namespace: network
#% endif %#
