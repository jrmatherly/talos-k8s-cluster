#% if kgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| kgateway controller - Envoy data plane control plane          #|
#| Controller: kgateway.dev/kgateway                             #|
#| REF: https://kgateway.dev/docs/                               #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: kgateway
spec:
  chart:
    spec:
      chart: kgateway
      version: "#{ kgateway_version | default('v2.2.0-beta.3') }#"
      sourceRef:
        kind: HelmRepository
        name: kgateway
  interval: 1h
  timeout: 15m
  dependsOn:
    - name: kgateway-crds
  values:
    #| ============================================================ #|
    #| Controller Configuration                                     #|
    #| ============================================================ #|
    controller:
      logLevel: info
      replicaCount: 1
      image:
        pullPolicy: IfNotPresent
      resources:
        requests:
          cpu: 100m
          memory: 128Mi
        limits:
          cpu: 500m
          memory: 512Mi
      extraEnv:
        #| Enable experimental Gateway API features #|
        KGW_ENABLE_GATEWAY_API_EXPERIMENTAL_FEATURES: "true"

    #| ============================================================ #|
    #| Namespace Discovery                                          #|
    #| Allow kgateway to discover resources across namespaces       #|
    #| ============================================================ #|
    discoveryNamespaceSelectors:
      - matchLabels:
          kubernetes.io/metadata.name: network
      - matchLabels:
          kubernetes.io/metadata.name: ai-system
      - matchLabels:
          kubernetes.io/metadata.name: agentgateway-system
      - matchLabels:
          kubernetes.io/metadata.name: keycloak
      - matchLabels:
          kubernetes.io/metadata.name: kube-system
      - matchLabels:
          kubernetes.io/metadata.name: observability
      - matchLabels:
          kubernetes.io/metadata.name: onedev
      - matchLabels:
          kubernetes.io/metadata.name: obot
      - matchLabels:
          kubernetes.io/metadata.name: flux-system
      - matchLabels:
          kubernetes.io/metadata.name: default
      - matchLabels:
          kubernetes.io/metadata.name: kagent
      - matchLabels:
          kubernetes.io/metadata.name: storage
#% endif %#
