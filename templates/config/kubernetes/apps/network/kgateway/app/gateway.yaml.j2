#% if kgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| GatewayClass for kgateway (Envoy data plane)                  #|
#| Controller: kgateway.dev/kgateway                             #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: GatewayClass
metadata:
  name: kgateway
spec:
  controllerName: kgateway.dev/kgateway
---
#| ============================================================ #|
#| Internal Gateway - for internal cluster services              #|
#| LoadBalancer IP: #{ cluster_gateway_addr }#                   #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: internal
  annotations:
    io.cilium/lb-ipam-ips: "#{ cluster_gateway_addr }#"
spec:
  gatewayClassName: kgateway
  listeners:
    - name: http
      protocol: HTTP
      port: 80
      allowedRoutes:
        namespaces:
          from: All
    - name: https
      protocol: HTTPS
      port: 443
      tls:
        mode: Terminate
        certificateRefs:
          - name: "#{ primary_domain | replace('.', '-') }#-tls"
            namespace: network
      allowedRoutes:
        namespaces:
          from: All
---
#| ============================================================ #|
#| External Gateway - for Cloudflare tunnel ingress              #|
#| LoadBalancer IP: #{ cloudflare_gateway_addr }#                #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: external
  annotations:
    io.cilium/lb-ipam-ips: "#{ cloudflare_gateway_addr }#"
spec:
  gatewayClassName: kgateway
  listeners:
    - name: http
      protocol: HTTP
      port: 80
      allowedRoutes:
        namespaces:
          from: All
    - name: https
      protocol: HTTPS
      port: 443
      tls:
        mode: Terminate
        certificateRefs:
          - name: "#{ primary_domain | replace('.', '-') }#-tls"
            namespace: network
      allowedRoutes:
        namespaces:
          from: All
#% endif %#
