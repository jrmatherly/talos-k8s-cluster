#% if kgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| NetworkPolicy for kgateway controller                         #|
#| ============================================================ #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: kgateway-controller
spec:
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: kgateway
  ingress:
    #| xDS from Envoy proxies #|
    - fromEndpoints:
        - matchLabels:
            gateway.networking.k8s.io/gateway-name: internal
        - matchLabels:
            gateway.networking.k8s.io/gateway-name: external
      toPorts:
        - ports:
            - port: "9977"
              protocol: TCP
    #| Metrics from Prometheus #|
    - fromEndpoints:
        - matchLabels:
            app.kubernetes.io/name: prometheus
      toPorts:
        - ports:
            - port: "9091"
              protocol: TCP
  egress:
    #| K8s API access #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
#% if kgateway_oauth2_enabled | default(false) and keycloak_enabled %#
    #| OIDC discovery endpoint (via external gateway LoadBalancer) #|
    #| Required for OAuth2 configuration validation               #|
    #| Uses toEntities:world because LoadBalancer IPs require it   #|
    - toEntities:
        - world
      toPorts:
        - ports:
            - port: "443"
              protocol: TCP
#% endif %#
#% if kgateway_oauth2_enabled | default(false) and keycloak_enabled %#
---
#| ============================================================ #|
#| NetworkPolicy for Gateway Proxies to Keycloak                 #|
#| Required for OAuth2 token exchange (internal Gateway)         #|
#| ============================================================ #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: kgateway-proxy-keycloak
spec:
  endpointSelector:
    matchLabels:
      gateway.networking.k8s.io/gateway-name: internal
  egress:
    #| OAuth2 token exchange with Keycloak #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: keycloak
            app.kubernetes.io/name: keycloak
      toPorts:
        - ports:
            - port: "8080"
              protocol: TCP
    #| DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
#% endif %#
#% endif %#
