#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| agentgateway CRDs for AI/MCP-related resources                #|
#| API Group: agentgateway.dev/v1alpha1                          #|
#| Resources: AgentgatewayPolicy, AgentgatewayBackend,           #|
#|            AgentgatewayParameters                             #|
#| ============================================================ #|
#| IMPORTANT: This uses the GHCR.IO registry, separate from      #|
#| kgateway-crds which uses cr.kgateway.dev                      #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: agentgateway-crds
spec:
  chart:
    spec:
      chart: agentgateway-crds
      version: "#{ agentgateway_version | default('v2.2.0-main') }#"
      sourceRef:
        kind: HelmRepository
        name: agentgateway
  interval: 1h
  install:
    crds: CreateReplace
  upgrade:
    crds: CreateReplace
#% endif %#
