#% if kgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| kgateway CRDs - Envoy Gateway API extensions                  #|
#| Provides: TrafficPolicy, Backend, GatewayParameters, etc.     #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: kgateway-crds
spec:
  chart:
    spec:
      chart: kgateway-crds
      version: "#{ kgateway_version | default('v2.2.0-beta.3') }#"
      sourceRef:
        kind: HelmRepository
        name: kgateway
  interval: 1h
  timeout: 5m
  install:
    crds: CreateReplace
    remediation:
      retries: 3
  upgrade:
    crds: CreateReplace
    remediation:
      retries: 3
#% endif %#
