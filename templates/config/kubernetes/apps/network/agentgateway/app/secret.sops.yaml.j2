#% if agentgateway_enabled | default(true) %#
#% if azure_openai_us_east_api_key %#
---
#| Azure OpenAI US East API Key for AI Backend #|
#| Key must be 'Authorization' per kgateway docs #|
apiVersion: v1
kind: Secret
metadata:
  name: azure-openai-us-east-secret
type: Opaque
stringData:
  Authorization: "#{ azure_openai_us_east_api_key }#"
#% endif %#
#% if azure_openai_us_east2_api_key %#
---
#| Azure OpenAI US East2 API Key for AI Backend #|
#| Key must be 'Authorization' per kgateway docs #|
apiVersion: v1
kind: Secret
metadata:
  name: azure-openai-us-east2-secret
type: Opaque
stringData:
  Authorization: "#{ azure_openai_us_east2_api_key }#"
#% endif %#
#% endif %#
