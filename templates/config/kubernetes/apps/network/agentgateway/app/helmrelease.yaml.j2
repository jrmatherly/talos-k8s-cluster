#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| agentgateway controller - AI/MCP data plane control plane     #|
#| Controller: agentgateway.dev/agentgateway                     #|
#| ============================================================ #|
#| IMPORTANT: This is a SEPARATE deployment from kgateway        #|
#| Uses ghcr.io/kgateway-dev/charts/agentgateway chart           #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: agentgateway
spec:
  chart:
    spec:
      chart: agentgateway
      version: "#{ agentgateway_version | default('v2.2.0-main') }#"
      sourceRef:
        kind: HelmRepository
        name: agentgateway
  interval: 1h
  timeout: 15m
  dependsOn:
    - name: agentgateway-crds
  values:
    #| ============================================================ #|
    #| ServiceAccount Configuration                                  #|
    #| Use unique name to avoid conflict with data plane SA          #|
    #| (Gateway creates 'agentgateway' SA with automount=false)      #|
    #| ============================================================ #|
    serviceAccount:
      name: agentgateway-controller

    #| ============================================================ #|
    #| Controller Configuration                                     #|
    #| ============================================================ #|
    controller:
      logLevel: info
      replicaCount: 1
      #| For dev builds (v2.2.0-main), use Always to get latest images #|
      image:
        pullPolicy: Always

    #| ============================================================ #|
    #| Resource Limits (required for GOMEMLIMIT/GOMAXPROCS env vars) #|
    #| ============================================================ #|
    resources:
      requests:
        cpu: 100m
        memory: 128Mi
      limits:
        cpu: 500m
        memory: 512Mi

    #| ============================================================ #|
    #| Namespace Discovery                                          #|
    #| Allow agentgateway to discover resources across namespaces   #|
    #| ============================================================ #|
    discoveryNamespaceSelectors:
      - matchLabels:
          kubernetes.io/metadata.name: network
      - matchLabels:
          kubernetes.io/metadata.name: ai-system
      - matchLabels:
          kubernetes.io/metadata.name: keycloak
      - matchLabels:
          kubernetes.io/metadata.name: obot
#% endif %#
