#| OIDC SecurityPolicy for Microsoft Entra ID authentication #|
#| Only rendered when oidc_enabled and oidc_entra_enabled are true #|
#% if oidc_enabled and oidc_entra_enabled %#
---
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: SecurityPolicy
metadata:
  name: oidc-entra
spec:
  targetRefs:
#% for gateway in oidc_target_gateways %#
    - group: gateway.networking.k8s.io
      kind: Gateway
      name: #{ gateway }#
#% endfor %#
  oidc:
    provider:
      issuer: "https://login.microsoftonline.com/#{ oidc_entra_tenant_id }#/v2.0"
      authorizationEndpoint: "https://login.microsoftonline.com/#{ oidc_entra_tenant_id }#/oauth2/v2.0/authorize"
      tokenEndpoint: "https://login.microsoftonline.com/#{ oidc_entra_tenant_id }#/oauth2/v2.0/token"
    clientID: "#{ oidc_entra_client_id }#"
    clientSecret:
      name: "oidc-entra-secret"
    #| Redirect to dedicated SSO subdomain for OAuth2 callback handling #|
    #| After callback, users are redirected to their original URL via state parameter #|
    redirectURL: "https://sso.${SECRET_DOMAIN}/oauth2/callback"
    logoutPath: "/logout"
    scopes:
      - openid
      - email
      - profile
      - offline_access
    refreshToken: true
    forwardAccessToken: true
    cookieDomain: "#{ oidc_cookie_domain }#"
#% endif %#
