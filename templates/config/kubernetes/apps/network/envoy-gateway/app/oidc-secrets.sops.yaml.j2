#| OIDC Client Secrets - SOPS encrypted #|
#| Only rendered when oidc_enabled is true and at least one provider is enabled #|
#% if oidc_enabled and (oidc_google_enabled or oidc_entra_enabled) %#
#% if oidc_google_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: oidc-google-secret
type: Opaque
stringData:
  client-secret: "#{ oidc_google_client_secret }#"
#% endif %#
#% if oidc_entra_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: oidc-entra-secret
type: Opaque
stringData:
  client-secret: "#{ oidc_entra_client_secret }#"
#% endif %#
#% endif %#
