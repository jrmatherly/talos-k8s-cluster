#| CloudNativePG PostgreSQL Cluster for Keycloak backend database #|
#| Reference: https://cloudnative-pg.io/documentation/current/ #|
#| Service endpoints: keycloak-postgres-rw.database.svc (primary read-write) #|
#|                    keycloak-postgres-ro.database.svc (read replicas) #|
#|                    keycloak-postgres-r.database.svc (any replica) #|
#% if mcp_gateway_enabled %#
---
apiVersion: postgresql.cnpg.io/v1
kind: Cluster
metadata:
  name: keycloak-postgres
  labels:
    app.kubernetes.io/name: postgresql
    app.kubernetes.io/instance: keycloak-postgres
    app.kubernetes.io/component: database
    app.kubernetes.io/part-of: mcp-gateway
spec:
  #| Number of PostgreSQL instances (1 for dev, 3 for HA production) #|
  instances: #{ keycloak_postgres_replicas | default(1) }#

  #| PostgreSQL 17 - latest stable version (Dec 2024) #|
  imageName: ghcr.io/cloudnative-pg/postgresql:17

  #| Bootstrap configuration - initialize database and user #|
  bootstrap:
    initdb:
      database: keycloak
      owner: keycloak
      secret:
        name: keycloak-postgres-credentials
      dataChecksums: true
      encoding: UTF8
      localeCollate: en_US.UTF-8
      localeCType: en_US.UTF-8

  #| Storage configuration #|
  storage:
    size: #{ keycloak_postgres_storage_size | default('10Gi') }#
    storageClass: #{ mcp_storage_class | default('proxmox-csi') }#

  #| Resource limits #|
  resources:
    requests:
      cpu: 250m
      memory: 512Mi
    limits:
      cpu: "2"
      memory: 2Gi

  #| PostgreSQL configuration optimized for Keycloak #|
  postgresql:
    parameters:
      #| Connection settings #|
      max_connections: "200"
      #| Memory settings (adjust based on available memory) #|
      shared_buffers: "256MB"
      effective_cache_size: "768MB"
      work_mem: "16MB"
      maintenance_work_mem: "128MB"
      #| WAL settings #|
      wal_buffers: "16MB"
      min_wal_size: "1GB"
      max_wal_size: "4GB"
      #| Query planner #|
      random_page_cost: "1.1"
      effective_io_concurrency: "200"
      #| Logging #|
      log_statement: ddl
      log_checkpoints: "on"
      log_lock_waits: "on"
      log_min_duration_statement: "1000"

  #| Monitoring - integrate with Prometheus if observability is enabled #|
#% if observability_enabled | default(false) %#
  monitoring:
    enablePodMonitor: true
#% endif %#

  #| Anti-affinity for HA deployments #|
#% if keycloak_postgres_replicas | default(1) | int > 1 %#
  affinity:
    enablePodAntiAffinity: true
    topologyKey: kubernetes.io/hostname
#% endif %#

  #| Replication settings for HA #|
#% if keycloak_postgres_replicas | default(1) | int > 1 %#
  replicationSlots:
    highAvailability:
      enabled: true
    updateInterval: 30
#% endif %#
#% endif %#
