#| PostgreSQL credentials for CloudNativePG Cluster #|
#| Uses kubernetes.io/basic-auth type as required by CNPG #|
#| Reference: https://cloudnative-pg.io/documentation/current/bootstrap/ #|
#% if mcp_gateway_enabled %#
---
apiVersion: v1
kind: Secret
metadata:
  name: keycloak-postgres-credentials
  labels:
    app.kubernetes.io/name: postgresql
    app.kubernetes.io/instance: keycloak-postgres
    app.kubernetes.io/component: database
    app.kubernetes.io/part-of: mcp-gateway
type: kubernetes.io/basic-auth
stringData:
  username: keycloak
  password: #{ keycloak_postgres_password }#
#% endif %#
