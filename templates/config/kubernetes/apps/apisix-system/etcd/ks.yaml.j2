#% if apisix_enabled %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: apisix-system-etcd
spec:
  dependsOn:
    - name: cilium
      namespace: kube-system
  interval: 1h
  path: ./kubernetes/apps/apisix-system/etcd/app
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: apisix-system
  wait: true
#% endif %#
