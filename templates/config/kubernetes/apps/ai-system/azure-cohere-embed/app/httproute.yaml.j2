#% if agentgateway_addr is defined and azure_cohere_embed_api_key is defined %#
---
#| HTTPRoute for Cohere Embed (kgateway v2.2+) #|
#| Auth handled by AgentgatewayBackend policies.auth.secretRef #|
#| Uses OpenAI-compatible API format at /openai/v1/embeddings #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-cohere-embed
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /cohere/embed
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplaceFullPath
              replaceFullPath: /openai/v1/embeddings
      backendRefs:
        - group: agentgateway.dev
          kind: AgentgatewayBackend
          name: azure-cohere-embed
          namespace: ai-system
#% endif %#
