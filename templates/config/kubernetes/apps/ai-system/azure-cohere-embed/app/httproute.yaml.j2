#% if agentgateway_addr is defined and azure_cohere_embed_api_key is defined %#
---
#| Static backends cannot use SecretRef - API key is injected via Flux postBuild substitution #|
#| Uses OpenAI-compatible API format at /openai/v1/embeddings #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-cohere-embed
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /cohere/embed
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplaceFullPath
              replaceFullPath: /openai/v1/embeddings
        - type: RequestHeaderModifier
          requestHeaderModifier:
            set:
              - name: Authorization
                value: "Bearer ${AZURE_COHERE_EMBED_API_KEY}"
      backendRefs:
        - group: gateway.kgateway.dev
          kind: Backend
          name: azure-cohere-embed
#% endif %#
