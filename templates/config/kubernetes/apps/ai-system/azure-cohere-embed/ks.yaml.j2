#% if agentgateway_addr is defined and azure_cohere_embed_api_key is defined %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: azure-cohere-embed
spec:
  interval: 1h
  path: ./kubernetes/apps/ai-system/azure-cohere-embed/app
  dependsOn:
    - name: kgateway
      namespace: kgateway-system
    #| ai-secrets creates the credentials secret before this kustomization runs #|
    - name: ai-secrets
  postBuild:
    substituteFrom:
      - kind: Secret
        name: cluster-secrets
      - kind: Secret
        name: azure-cohere-embed-credentials
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: ai-system
  wait: true
#% endif %#
