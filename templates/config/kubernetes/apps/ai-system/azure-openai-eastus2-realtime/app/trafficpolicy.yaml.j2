#% if agentgateway_addr is defined and azure_openai_eastus2_api_key is defined and azure_openai_eastus2_realtime_deployment_name is defined %#
#% if agentgateway_rate_limit_enabled | default(true) %#
---
apiVersion: gateway.kgateway.dev/v1alpha1
kind: TrafficPolicy
metadata:
  name: azure-openai-eastus2-realtime-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: azure-openai-eastus2-realtime

  #| Rate Limiting: 30 RPM (Azure gpt-realtime tier limits) #|
  #| Note: Using conservative gpt-realtime limits; gpt-realtime-mini has 200 RPM #|
  rateLimit:
    local:
      tokenBucket:
        maxTokens: 1
        tokensPerFill: 1
        fillInterval: 2s

  #| Realtime sessions may be long-running; extended timeout #|
  timeouts:
    request: 300s

  retry:
    attempts: 2
    backoffBaseInterval: 2s
    retryOn:
      - 5xx
      - unavailable
      - reset
#% endif %#
#% endif %#
