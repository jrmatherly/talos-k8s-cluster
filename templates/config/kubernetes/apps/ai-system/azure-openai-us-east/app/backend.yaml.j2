#% if envoy_ai_gateway_enabled and azure_openai_us_east_api_key %#
---
# Backend endpoint definition for Azure OpenAI US East
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: Backend
metadata:
  name: azure-openai-us-east-backend
spec:
  endpoints:
    - fqdn:
        hostname: #{ azure_openai_us_east_resource_name }#.cognitiveservices.azure.com
        port: 443
---
# BackendTLSPolicy for TLS validation (Gateway API standard)
apiVersion: gateway.networking.k8s.io/v1alpha3
kind: BackendTLSPolicy
metadata:
  name: azure-openai-us-east-tls
spec:
  targetRefs:
    - group: gateway.envoyproxy.io
      kind: Backend
      name: azure-openai-us-east-backend
  validation:
    wellKnownCACertificates: System
    hostname: #{ azure_openai_us_east_resource_name }#.cognitiveservices.azure.com
#% endif %#
