#% if envoy_ai_gateway_enabled and azure_openai_us_east2_api_key %#
---
# Standard HTTPRoute for Azure AI Foundry Anthropic
# Uses direct routing instead of AIGatewayRoute because Azure AI Foundry
# Anthropic is not a supported provider in Envoy AI Gateway.
# The path /anthropic/v1/messages is preserved (no rewriting needed).
# Uses HTTPRouteFilter for x-api-key header injection from secret.
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-anthropic-route
spec:
  parentRefs:
    - name: envoy-ai
      namespace: network
      kind: Gateway
      group: gateway.networking.k8s.io
  rules:
    # Fast model (claude-haiku-4-5) - 120s timeout
    - matches:
        - path:
            type: PathPrefix
            value: /anthropic
          headers:
            - type: Exact
              name: x-ai-eg-model
              value: "claude-haiku-4-5"
      backendRefs:
        - group: gateway.envoyproxy.io
          kind: Backend
          name: azure-anthropic-backend
          namespace: ai-system
      filters:
        - type: URLRewrite
          urlRewrite:
            hostname: #{ azure_openai_us_east2_resource_name }#.services.ai.azure.com
        - type: ExtensionRef
          extensionRef:
            group: gateway.envoyproxy.io
            kind: HTTPRouteFilter
            name: azure-anthropic-credential-injection
      timeouts:
        request: 120s
    # Balanced model (claude-sonnet-4-5) - 180s timeout
    - matches:
        - path:
            type: PathPrefix
            value: /anthropic
          headers:
            - type: Exact
              name: x-ai-eg-model
              value: "claude-sonnet-4-5"
      backendRefs:
        - group: gateway.envoyproxy.io
          kind: Backend
          name: azure-anthropic-backend
          namespace: ai-system
      filters:
        - type: URLRewrite
          urlRewrite:
            hostname: #{ azure_openai_us_east2_resource_name }#.services.ai.azure.com
        - type: ExtensionRef
          extensionRef:
            group: gateway.envoyproxy.io
            kind: HTTPRouteFilter
            name: azure-anthropic-credential-injection
      timeouts:
        request: 180s
    # Advanced models (claude-opus-4-5, claude-opus-4-1) - 300s timeout
    - matches:
        - path:
            type: PathPrefix
            value: /anthropic
          headers:
            - type: Exact
              name: x-ai-eg-model
              value: "claude-opus-4-5"
        - path:
            type: PathPrefix
            value: /anthropic
          headers:
            - type: Exact
              name: x-ai-eg-model
              value: "claude-opus-4-1"
      backendRefs:
        - group: gateway.envoyproxy.io
          kind: Backend
          name: azure-anthropic-backend
          namespace: ai-system
      filters:
        - type: URLRewrite
          urlRewrite:
            hostname: #{ azure_openai_us_east2_resource_name }#.services.ai.azure.com
        - type: ExtensionRef
          extensionRef:
            group: gateway.envoyproxy.io
            kind: HTTPRouteFilter
            name: azure-anthropic-credential-injection
      timeouts:
        request: 300s
#% endif %#
