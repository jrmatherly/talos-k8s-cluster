#% if envoy_ai_gateway_enabled and azure_anthropic_api_key %#
---
# Fast model (claude-haiku-4-5) - 120s timeout
# Azure AI Foundry uses /anthropic/v1/messages path (not /v1/messages)
apiVersion: aigateway.envoyproxy.io/v1alpha1
kind: AIServiceBackend
metadata:
  name: azure-anthropic-fast
spec:
  schema:
    name: Anthropic
    version: "anthropic/v1"
  backendRef:
    group: gateway.envoyproxy.io
    kind: Backend
    name: azure-anthropic-backend
---
# Balanced model (claude-sonnet-4-5) - 180s timeout
apiVersion: aigateway.envoyproxy.io/v1alpha1
kind: AIServiceBackend
metadata:
  name: azure-anthropic-balanced
spec:
  schema:
    name: Anthropic
    version: "anthropic/v1"
  backendRef:
    group: gateway.envoyproxy.io
    kind: Backend
    name: azure-anthropic-backend
---
# Advanced models (claude-opus-4-5, claude-opus-4-1) - 300s timeout
apiVersion: aigateway.envoyproxy.io/v1alpha1
kind: AIServiceBackend
metadata:
  name: azure-anthropic-advanced
spec:
  schema:
    name: Anthropic
    version: "anthropic/v1"
  backendRef:
    group: gateway.envoyproxy.io
    kind: Backend
    name: azure-anthropic-backend
#% endif %#
