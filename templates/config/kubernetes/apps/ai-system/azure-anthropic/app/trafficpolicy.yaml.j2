#% if agentgateway_addr is defined and azure_anthropic_api_key is defined %#
#% if agentgateway_rate_limit_enabled | default(true) or agentgateway_prompt_guard_enabled | default(true) %#
---
apiVersion: gateway.kgateway.dev/v1alpha1
kind: TrafficPolicy
metadata:
  name: azure-anthropic-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: azure-anthropic

#% if agentgateway_rate_limit_enabled | default(true) %#
  # Rate Limiting: 1,000 RPM, 1,000,000 TPM (Claude tier limits)
  policies:
    localRateLimit:
      - maxTokens: 1000000
        tokensPerFill: 16666
        fillInterval: 1s
        type: tokens
        tokenize: true
      - maxTokens: 17
        tokensPerFill: 17
        fillInterval: 1s
        type: requests
#% endif %#

  timeouts:
    request: 180s

  retry:
    attempts: 3
    backoffBaseInterval: 1s
    retryOn:
      - 5xx
      - unavailable
      - reset

#% if agentgateway_prompt_guard_enabled | default(true) %#
  ai:
    promptGuard:
      request:
        customResponse:
          message: "Request blocked: contains sensitive data patterns"
        regex:
          action: REJECT
          builtins:
            - CREDIT_CARD
            - SSN
      response:
        regex:
          action: MASK
          builtins:
            - CREDIT_CARD
            - SSN
            - EMAIL
#% endif %#
#% endif %#
#% endif %#
