#% if agentgateway_addr is defined and azure_openai_eastus_api_key is defined %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-openai-eastus-chat
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /azure/eastus/chat/completions
      backendRefs:
        - group: agentgateway.dev
          kind: Backend
          name: azure-openai-eastus-chat
          namespace: ai-system
#% endif %#
