#% if agentgateway_addr is defined and azure_openai_eastus_api_key is defined %#
#% if agentgateway_rate_limit_enabled | default(true) %#
---
#| TrafficPolicy for rate limiting, timeouts, and retries (Kgateway v2.2+) #|
#| NOTE: Prompt guards moved to AgentgatewayPolicy in v2.2 - use spec.backend.ai.promptGuard #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: TrafficPolicy
metadata:
  name: azure-openai-eastus-chat-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: azure-openai-eastus-chat

  #| Rate Limiting: 2,000 RPM (Azure GPT-4 tier limits) #|
  rateLimit:
    local:
      tokenBucket:
        maxTokens: 33
        tokensPerFill: 33
        fillInterval: 1s

  timeouts:
    request: 120s

  retry:
    attempts: 3
    backoffBaseInterval: 1s
    retryOn:
      - 5xx
      - unavailable
      - reset
#% endif %#
#% endif %#
