#% if litellm_enabled %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: litellm
spec:
  dependsOn:
    - name: cilium
      namespace: kube-system
    - name: cloudnative-pg
      namespace: cnpg-system
#% if proxmox_csi_token_id and proxmox_csi_token_secret %#
    - name: proxmox-csi
      namespace: csi-proxmox
#% endif %#
  interval: 1h
  timeout: 15m
  path: ./kubernetes/apps/ai-system/litellm/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: ai-system
  wait: false
  postBuild:
    substituteFrom:
      - kind: Secret
        name: cluster-secrets
#% endif %#
