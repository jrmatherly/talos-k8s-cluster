#% if cognee_enabled | default(false) %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: cognee
spec:
  dependsOn:
    - name: cilium
      namespace: kube-system
    - name: cloudnative-pg
      namespace: cnpg-system
    # Neo4j graph database (shared resource in storage namespace)
    - name: neo4j
      namespace: storage
#% if obot_enabled | default(false) %#
    - name: obot
      namespace: obot
#% endif %#
#% if litellm_enabled | default(false) %#
    - name: litellm
      namespace: ai-system
#% endif %#
#% if proxmox_csi_token_id and proxmox_csi_token_secret %#
    - name: proxmox-csi
      namespace: csi-proxmox
#% endif %#
  interval: 1h
  timeout: 15m
  path: ./kubernetes/apps/ai-system/cognee/app
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: ai-system
  wait: false
  postBuild:
    substituteFrom:
      - kind: Secret
        name: cluster-secrets
#% endif %#
