#% if cognee_enabled | default(false) and cognee_api_enabled | default(false) %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: cognee
spec:
  hostnames:
    - "#{ cognee_hostname | default('cognee') }#.${SECRET_DOMAIN}"
  parentRefs:
    - name: envoy-external
      namespace: network
      sectionName: https
  rules:
    - backendRefs:
        - name: cognee
          port: 8000
#% endif %#
