#% if cognee_enabled | default(false) and cognee_api_enabled | default(false) %#
---
# HTTPRoute for Cognee Backend API
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: cognee-api
spec:
  hostnames:
    - "#{ cognee_api_hostname | default('cognee-api') }#.${SECRET_DOMAIN}"
  parentRefs:
    - name: "#{ cognee_gateway | default('envoy-external') }#"
      namespace: network
      sectionName: https
  rules:
    - backendRefs:
        - name: cognee-cognee
          port: 8000
#% endif %#
#% if cognee_enabled | default(false) and cognee_frontend_enabled | default(false) %#
---
# HTTPRoute for Cognee Frontend
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: cognee-frontend
spec:
  hostnames:
    - "#{ cognee_frontend_hostname | default('cognee') }#.${SECRET_DOMAIN}"
  parentRefs:
    - name: "#{ cognee_gateway | default('envoy-external') }#"
      namespace: network
      sectionName: https
  rules:
    - backendRefs:
        - name: cognee-frontend
          port: 3000
#% endif %#
