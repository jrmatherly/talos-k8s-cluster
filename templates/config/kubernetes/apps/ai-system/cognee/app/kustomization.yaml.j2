#% if cognee_enabled | default(false) %#
---
#| NOTE: Neo4j has been moved to the storage namespace for shared access.
   See kubernetes/apps/storage/neo4j/ for graph database resources.
   ServiceMonitor disabled - Neo4j CE doesn't support Prometheus metrics (Enterprise-only) #|
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
resources:
  - secret.sops.yaml
#% if cognee_dedicated_db | default(false) %#
  - postgresql.yaml
  - db-networkpolicy.yaml
#% endif %#
#% if cognee_api_enabled | default(false) %#
  # Cognee API Server resources
  - ocirepository.yaml
  - helmrelease.yaml
  - api-secret.sops.yaml
  - api-networkpolicy.yaml
  - httproute.yaml
#% endif %#
#% endif %#
