#% if agentgateway_enabled | default(true) %#
---
#| ============================================================ #|
#| agentgateway controller - AI/MCP data plane control plane     #|
#| Controller: agentgateway.dev/agentgateway                     #|
#| ============================================================ #|
#| IMPORTANT: This is a STANDALONE deployment in ai-system       #|
#| Uses cr.agentgateway.dev/charts/agentgateway chart            #|
#| Does NOT depend on kgateway (network namespace)               #|
#| ============================================================ #|
apiVersion: helm.toolkit.fluxcd.io/v2
kind: HelmRelease
metadata:
  name: agentgateway
spec:
  chart:
    spec:
      chart: agentgateway
      version: "#{ agentgateway_version | default('v2.2.0-main') }#"
      sourceRef:
        kind: HelmRepository
        name: agentgateway
  interval: 1h
  timeout: 15m
  dependsOn:
    - name: agentgateway-crds
  values:
    #| ============================================================ #|
    #| Naming Configuration                                          #|
    #| REQUIRED: Controller and data plane both want name 'agentgateway' #|
    #| fullnameOverride gives controller resources distinct names so     #|
    #| data plane deployment can use 'agentgateway' without conflict     #|
    #| ============================================================ #|
    fullnameOverride: agentgateway-controller
    serviceAccount:
      name: agentgateway-controller

    #| ============================================================ #|
    #| Controller Configuration                                     #|
    #| ============================================================ #|
    controller:
      logLevel: info
      replicaCount: 1
      #| For tagged releases, use IfNotPresent #|
      image:
        pullPolicy: IfNotPresent

    #| ============================================================ #|
    #| Resource Limits (required for GOMEMLIMIT/GOMAXPROCS env vars) #|
    #| ============================================================ #|
    resources:
      requests:
        cpu: 100m
        memory: 128Mi
      limits:
        cpu: 500m
        memory: 512Mi

    #| ============================================================ #|
    #| Namespace Discovery                                          #|
    #| Allow agentgateway to discover resources across namespaces   #|
    #| ============================================================ #|
    discoveryNamespaceSelectors:
      - matchLabels:
          kubernetes.io/metadata.name: ai-system
      - matchLabels:
          kubernetes.io/metadata.name: keycloak
      - matchLabels:
          kubernetes.io/metadata.name: obot
#% endif %#
