#% if envoy_ai_gateway_enabled and azure_openai_api_key %#
---
# Secret for Azure OpenAI API Key authentication
apiVersion: v1
kind: Secret
metadata:
  name: azure-openai-credentials
type: Opaque
stringData:
  apiKey: "#{ azure_openai_api_key }#"
#% if azure_tenant_id and azure_client_id and azure_client_secret %#
---
# Secret for Azure Entra ID authentication (if using Azure credentials instead of API key)
apiVersion: v1
kind: Secret
metadata:
  name: azure-credentials
type: Opaque
stringData:
  client-secret: "#{ azure_client_secret }#"
#% endif %#
#% endif %#
