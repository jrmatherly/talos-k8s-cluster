#% if agentgateway_addr is defined and azure_anthropic_api_key is defined %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-anthropic-opus
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /anthropic/opus/messages
      filters:
        #| URLRewrite: Transform path for Azure AI Foundry Anthropic endpoint #|
        #| /anthropic/opus/messages -> /anthropic/v1/messages #|
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /anthropic/v1/messages
      backendRefs:
        - group: agentgateway.dev
          kind: AgentgatewayBackend
          name: azure-anthropic-opus
          namespace: ai-system
#% endif %#
