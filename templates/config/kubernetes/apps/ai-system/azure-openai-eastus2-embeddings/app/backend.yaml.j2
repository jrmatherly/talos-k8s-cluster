#% if agentgateway_addr is defined and azure_openai_eastus2_api_key is defined and azure_openai_eastus2_embeddings_deployment_name is defined %#
---
#| Backend for Azure OpenAI (kgateway v2.1.1) #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: Backend
metadata:
  name: azure-openai-eastus2-embeddings
  labels:
    cost-center: ai-gateway
    provider: azure-openai
    region: eastus2
    model-type: embeddings
    app.kubernetes.io/name: azure-openai-eastus2-embeddings
    app.kubernetes.io/component: ai-backend
    app.kubernetes.io/part-of: ai-system
spec:
  type: AI
  ai:
    llm:
      azureopenai:
        endpoint: "https://#{ azure_openai_eastus2_resource_name }#.openai.azure.com"
        deploymentName: "#{ azure_openai_eastus2_embeddings_deployment_name }#"
        apiVersion: "#{ azure_openai_eastus2_embeddings_api_version | default('2023-05-15') }#"
        authToken:
          kind: SecretRef
          secretRef:
            name: azure-openai-eastus2-embeddings-credentials
#% endif %#
