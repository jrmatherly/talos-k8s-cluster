#% if agentgateway_enabled | default(false) %#
---
#| ============================================================ #|
#| AgentgatewayBackend for Context7 external MCP server          #|
#| Provides MCP routing to context7.upstash.io                   #|
#| Protocol: SSE (Server-Sent Events) - standard MCP transport   #|
#| ============================================================ #|
apiVersion: agentgateway.dev/v1alpha1
kind: AgentgatewayBackend
metadata:
  name: context7-mcp
spec:
  mcp:
    targets:
      - name: context7
        static:
          host: context7.upstash.io
          port: 443
          protocol: SSE
          path: /mcp
          policies:
            #| Enable TLS with system CA certificates #|
            tls: {}
#% endif %#
