#% if agentgateway_enabled | default(false) %#
---
#| ============================================================ #|
#| HTTPRoute for Context7 MCP server                             #|
#| Routes /mcp/context7/* paths to context7.upstash.io          #|
#| Uses AgentgatewayBackend for MCP protocol support             #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: context7-route
spec:
  parentRefs:
    - name: agentgateway
      namespace: agentgateway-system
      sectionName: https
  hostnames:
    - "mcp-gw.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /mcp/context7
      backendRefs:
        - group: agentgateway.dev
          kind: AgentgatewayBackend
          name: context7-mcp
#% endif %#
