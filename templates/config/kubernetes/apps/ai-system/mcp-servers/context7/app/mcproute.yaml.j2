#% if agentgateway_enabled | default(false) %#
---
#| ============================================================ #|
#| HTTPRoute for Context7 MCP server proxy                       #|
#| Routes /mcp/context7/* paths to context7.upstash.io          #|
#| Provides: centralized logging, rate limiting, metrics         #|
#|                                                               #|
#| NOTE: This is a simple HTTPS proxy route, not MCP protocol    #|
#| routing. For full MCP tool discovery and filtering, use the   #|
#| Context7 MCP plugin directly in your MCP client.              #|
#| ============================================================ #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: context7-route
spec:
  parentRefs:
    - name: agentgateway
      namespace: network
      sectionName: https
  hostnames:
    - "mcp-gw.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /mcp/context7
      filters:
        #| Rewrite path to remove /mcp/context7 prefix #|
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplacePrefixMatch
              replacePrefixMatch: /mcp
      backendRefs:
        - group: gateway.kgateway.dev
          kind: Backend
          name: context7-mcp
#% endif %#
