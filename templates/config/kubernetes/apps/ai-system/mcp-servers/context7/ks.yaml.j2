#% if agentgateway_enabled | default(false) %#
---
#| ============================================================ #|
#| Context7 MCP Server Proxy Kustomization                       #|
#| Routes external MCP requests through agentgateway to          #|
#| context7.upstash.io for centralized logging and metrics       #|
#| ============================================================ #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: mcp-context7
spec:
  interval: 1h
  path: ./kubernetes/apps/ai-system/mcp-servers/context7/app
  dependsOn:
    - name: agentgateway
      namespace: agentgateway-system
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: ai-system
  wait: true
#% endif %#
