#% if agentgateway_addr is defined and azure_cohere_rerank_api_key is defined %#
---
#| HTTPRoute for Cohere Rerank (kgateway v2.2+) #|
#| Auth handled by AgentgatewayBackend policies.auth.secretRef #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-cohere-rerank
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /cohere/rerank
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplaceFullPath
              replaceFullPath: /v2/rerank
      backendRefs:
        - group: agentgateway.dev
          kind: AgentgatewayBackend
          name: azure-cohere-rerank
          namespace: ai-system
#% endif %#
