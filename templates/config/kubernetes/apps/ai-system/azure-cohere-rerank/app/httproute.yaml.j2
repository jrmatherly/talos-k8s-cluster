#% if agentgateway_addr is defined and azure_cohere_rerank_api_key is defined %#
---
#| Static backends cannot use SecretRef - API key is injected via Flux postBuild substitution #|
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: azure-cohere-rerank
spec:
  parentRefs:
    - name: agentgateway
      namespace: kgateway-system
  hostnames:
    - "llms.#{ primary_domain }#"
  rules:
    - matches:
        - path:
            type: PathPrefix
            value: /cohere/rerank
      filters:
        - type: URLRewrite
          urlRewrite:
            path:
              type: ReplaceFullPath
              replaceFullPath: /v2/rerank
        - type: RequestHeaderModifier
          requestHeaderModifier:
            set:
              - name: Authorization
                value: "Bearer ${AZURE_COHERE_RERANK_API_KEY}"
      backendRefs:
        - group: gateway.kgateway.dev
          kind: AgentgatewayBackend
          name: azure-cohere-rerank
          namespace: ai-system
#% endif %#
