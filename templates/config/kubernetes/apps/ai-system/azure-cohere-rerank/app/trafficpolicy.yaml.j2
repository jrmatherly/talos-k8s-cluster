#% if agentgateway_addr is defined and azure_cohere_rerank_api_key is defined %#
#% if agentgateway_rate_limit_enabled | default(true) %#
---
#| Static backends don't support AI-specific prompt guards - only rate limiting #|
apiVersion: gateway.kgateway.dev/v1alpha1
kind: TrafficPolicy
metadata:
  name: azure-cohere-rerank-policy
spec:
  targetRefs:
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: azure-cohere-rerank

  #| Rate Limiting: 1,000 RPM (conservative default) #|
  rateLimit:
    local:
      tokenBucket:
        maxTokens: 17
        tokensPerFill: 17
        fillInterval: 1s

  timeouts:
    request: 60s

  retry:
    attempts: 3
    backoffBaseInterval: 1s
    retryOn:
      - 5xx
      - unavailable
      - reset
#% endif %#
#% endif %#
