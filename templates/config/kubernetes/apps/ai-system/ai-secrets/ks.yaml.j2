#% if agentgateway_addr is defined %#
#% if azure_cohere_rerank_api_key is defined or azure_cohere_embed_api_key is defined %#
---
#| ai-secrets: Pre-creates secrets for Static backends that use postBuild.substituteFrom #|
#| This kustomization must run BEFORE backend kustomizations that reference these secrets #|
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: ai-secrets
spec:
  interval: 1h
  path: ./kubernetes/apps/ai-system/ai-secrets/app
  dependsOn:
    - name: kgateway
      namespace: kgateway-system
  decryption:
    provider: sops
    secretRef:
      name: sops-age
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: ai-system
  wait: true
#% endif %#
#% endif %#
