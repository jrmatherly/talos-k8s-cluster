#% if flux_mcp_enabled | default(false) %#
---
#| CiliumNetworkPolicy for flux-mcp egress permissions #|
#| IMPORTANT: CNP with egress rules creates implicit default-deny for other egress! #|
#| Must include ALL required egress destinations when using CNP egress rules. #|
#| NOTE: Ingress is handled by the chart's built-in networkPolicy values. #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: flux-mcp-egress
  namespace: flux-system
spec:
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: flux-operator-mcp
  egress:
    #| Allow egress to Kubernetes API server (required for MCP operations) #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
    #| Allow DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
#% endif %#