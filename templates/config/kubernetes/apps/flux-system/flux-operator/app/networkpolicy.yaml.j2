#% if flux_web_enabled | default(false) and flux_web_oauth2_enabled | default(true) and keycloak_enabled %#
---
#| CiliumNetworkPolicy for flux-operator egress permissions #|
#| IMPORTANT: CNP with egress rules creates implicit default-deny for other egress! #|
#| Must include ALL required egress destinations when using CNP egress rules. #|
apiVersion: cilium.io/v2
kind: CiliumNetworkPolicy
metadata:
  name: flux-operator-egress
  namespace: flux-system
spec:
  endpointSelector:
    matchLabels:
      app.kubernetes.io/name: flux-operator
  egress:
    #| Allow OIDC token validation via external gateway (auth.domain resolves to external LB) #|
    - toEndpoints:
        - matchLabels:
            network.cilium.io/gateway-proxy: "true"
            gateway.networking.k8s.io/gateway-name: external
            k8s:io.kubernetes.pod.namespace: network
      toPorts:
        - ports:
            - port: "443"
              protocol: TCP
    #| Allow communication with other Flux controllers in same namespace #|
    #| (notification-controller:9090, source-controller, helm-controller, etc.) #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: flux-system
    #| Allow DNS resolution #|
    - toEndpoints:
        - matchLabels:
            k8s:io.kubernetes.pod.namespace: kube-system
            k8s-app: kube-dns
      toPorts:
        - ports:
            - port: "53"
              protocol: UDP
            - port: "53"
              protocol: TCP
    #| Allow egress to external registries (ghcr.io, etc.) for OCI artifacts #|
    - toEntities:
        - world
      toPorts:
        - ports:
            - port: "443"
              protocol: TCP
    #| Allow egress to Kubernetes API server (required for controller operations) #|
    - toEntities:
        - kube-apiserver
      toPorts:
        - ports:
            - port: "6443"
              protocol: TCP
---
#| NetworkPolicy for flux-operator ingress from network namespace (kgateway) #|
apiVersion: networking.k8s.io/v1
kind: NetworkPolicy
metadata:
  name: flux-operator-web-ingress
  namespace: flux-system
spec:
  podSelector:
    matchLabels:
      app.kubernetes.io/name: flux-operator
  policyTypes:
    - Ingress
  ingress:
    #| Allow from Envoy Gateway proxies (web UI access via internal gateway) #|
    - from:
        - namespaceSelector:
            matchLabels:
              kubernetes.io/metadata.name: network
      ports:
        - protocol: TCP
          port: 9080
    #| Allow kubelet health probes from node network #|
    - from:
        - ipBlock:
            cidr: #{ node_cidr }#
      ports:
        - protocol: TCP
          port: 9080
#% endif %#