#% if devtron_enabled %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: devtron
spec:
  dependsOn:
#% if proxmox_csi_token_id and proxmox_csi_token_secret %#
    - name: proxmox-csi
      namespace: csi-proxmox
#% endif %#
    - name: envoy-gateway
      namespace: network
  interval: 1h
  path: ./kubernetes/apps/devtroncd/devtron/app
  # NOTE: postBuild substitution is intentionally omitted for Devtron.
  # The Devtron Helm chart uses ${...} variable syntax internally (e.g., ${PG_DATABASE})
  # which conflicts with Flux's postBuild substitution, causing duplicate YAML key errors.
  # Domain values are hardcoded in templates using Jinja2's primary_domain variable.
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: devtroncd
  timeout: 30m
  wait: false
#% endif %#
