#% if devtron_enabled %#
---
apiVersion: gateway.networking.k8s.io/v1
kind: HTTPRoute
metadata:
  name: devtron-dashboard
spec:
  hostnames: ["#{ devtron_hostname }#.${SECRET_DOMAIN}"]
  parentRefs:
    - name: envoy-#{ devtron_gateway }#
      namespace: network
      sectionName: https
  rules:
    - backendRefs:
        - name: devtron-service
          namespace: devtroncd
          port: 80
#% endif %#
