#% if ai_gateway_enabled %#
---
# GatewayClass for AI Gateway
apiVersion: gateway.networking.k8s.io/v1
kind: GatewayClass
metadata:
  name: ai-gateway
spec:
  controllerName: gateway.envoyproxy.io/gatewayclass-controller
---
# Gateway for AI traffic
apiVersion: gateway.networking.k8s.io/v1
kind: Gateway
metadata:
  name: ai-gateway
spec:
  gatewayClassName: ai-gateway
  listeners:
    - name: http
      protocol: HTTP
      port: 80
      allowedRoutes:
        namespaces:
          from: Same
    - name: https
      protocol: HTTPS
      port: 443
      tls:
        mode: Terminate
        certificateRefs:
          - name: ai-gateway-tls
            kind: Secret
      allowedRoutes:
        namespaces:
          from: Same
  infrastructure:
    parametersRef:
      group: gateway.envoyproxy.io
      kind: EnvoyProxy
      name: ai-gateway-proxy
---
# EnvoyProxy configuration for AI Gateway
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: EnvoyProxy
metadata:
  name: ai-gateway-proxy
spec:
  provider:
    type: Kubernetes
    kubernetes:
      envoyService:
        type: LoadBalancer
        loadBalancerIP: #{ ai_gateway_addr }#
        annotations:
          io.cilium/lb-ipam-ips: #{ ai_gateway_addr }#
---
# Certificate for AI Gateway (uses cert-manager)
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: ai-gateway-tls
spec:
  secretName: ai-gateway-tls
  issuerRef:
    name: letsencrypt-production
    kind: ClusterIssuer
  dnsNames:
    - aiops.#{ primary_domain }#
#% endif %#
