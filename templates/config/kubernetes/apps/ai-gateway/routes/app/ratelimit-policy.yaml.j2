#% if ai_gateway_enabled and ai_gateway_ratelimit_enabled %#
---
# BackendTrafficPolicy for token-based rate limiting
# Note: AIGatewayRoute generates an HTTPRoute with the same name (azure-ai)
# BackendTrafficPolicy must target Gateway API resources (HTTPRoute, Gateway)
apiVersion: gateway.envoyproxy.io/v1alpha1
kind: BackendTrafficPolicy
metadata:
  name: ai-gateway-ratelimit
spec:
  targetRefs:
    # Target the HTTPRoute generated by AIGatewayRoute (same name)
    - group: gateway.networking.k8s.io
      kind: HTTPRoute
      name: azure-ai
  rateLimit:
    type: Global
    global:
      rules:
        - clientSelectors:
            - headers:
                - name: x-user-id
                  type: Distinct
          limit:
            # Token limit per user per hour
            requests: #{ ai_gateway_ratelimit_default_limit }#
            unit: Hour
          cost:
            # No cost for requests (only responses)
            request:
              from: Number
              number: 0
            # Cost based on total tokens from response metadata
            response:
              from: Metadata
              metadata:
                namespace: "io.envoy.ai_gateway"
                key: "llm_total_token"
#% endif %#
