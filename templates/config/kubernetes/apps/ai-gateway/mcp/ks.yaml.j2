#% if ai_gateway_enabled and ai_gateway_mcp_enabled and ai_gateway_mcp_servers %#
---
apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: ai-gateway-mcp
spec:
  interval: 1h
  path: ./kubernetes/apps/ai-gateway/mcp/app
  dependsOn:
    - name: ai-gateway-controller
  postBuild:
    substituteFrom:
      - name: cluster-secrets
        kind: Secret
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
    namespace: flux-system
  targetNamespace: #{ ai_gateway_namespace }#
  wait: true
#% endif %#
