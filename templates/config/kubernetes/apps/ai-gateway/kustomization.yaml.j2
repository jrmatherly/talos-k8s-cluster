#% if ai_gateway_enabled %#
---
apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: #{ ai_gateway_namespace }#

components:
  - ../../components/sops

resources:
  - ./namespace.yaml
  - ./crds/ks.yaml
  - ./controller/ks.yaml
#% if ai_gateway_ratelimit_enabled %#
  - ./redis/ks.yaml
#% endif %#
  - ./backends/azure-openai/ks.yaml
#% if ai_gateway_mcp_enabled and ai_gateway_mcp_servers %#
  - ./mcp/ks.yaml
#% endif %#
  - ./routes/ks.yaml
#% endif %#
