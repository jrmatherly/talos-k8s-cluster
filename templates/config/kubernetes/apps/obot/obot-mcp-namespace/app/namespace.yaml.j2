#% if obot_enabled | default(false) %#
---
# obot-mcp namespace for MCP server pods
# Created separately from main obot kustomization to avoid namespace transformation
apiVersion: v1
kind: Namespace
metadata:
  name: #{ obot_mcp_namespace | default('obot-mcp') }#
  labels:
    app.kubernetes.io/name: obot
    app.kubernetes.io/component: mcp-server
    kubernetes.io/metadata.name: #{ obot_mcp_namespace | default('obot-mcp') }#
    kustomize.toolkit.fluxcd.io/prune: disabled
#% endif %#
