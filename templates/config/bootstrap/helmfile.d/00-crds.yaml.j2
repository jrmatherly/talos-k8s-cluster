---

# This helmfile is for extracting and installing Custom Resource Definitions (CRDs) from Helm charts.
# It is not intended to be used with helmfile apply or helmfile sync.

helmDefaults:
  args:
    - --include-crds
    - --no-hooks
  postRenderer: bash
  postRendererArgs:
    - -c
    - yq eval-all --exit-status 'select(.kind == "CustomResourceDefinition")'

releases:
  - name: cloudflare-dns
    namespace: network
    chart: oci://ghcr.io/home-operations/charts-mirror/external-dns
    version: 1.19.0
#% if kgateway_enabled | default(true) or agentgateway_enabled | default(false) %#

  #| kubernetes-sigs Gateway API CRDs (gateway.networking.k8s.io)                      #|
  #| Installed via bootstrap-apps.sh before this helmfile runs                         #|
  #| Version controlled by gateway_api_version in cluster.yaml (default: v1.4.1)       #|
  #| Flux Kustomization also reconciles them for drift correction                      #|
  #|                                                                                    #|
  #| kgateway-crds below provides kgateway-specific CRDs (gateway.kgateway.dev):       #|
  #| TrafficPolicy, BackendConfigPolicy, GatewayParameters, etc.                       #|

  - name: kgateway-crds
    namespace: network
    chart: oci://cr.kgateway.dev/kgateway-dev/charts/kgateway-crds
    version: #{ kgateway_version | default('v2.2.0-beta.3') }#

  - name: kgateway
    namespace: network
    chart: oci://cr.kgateway.dev/kgateway-dev/charts/kgateway
    version: #{ kgateway_version | default('v2.2.0-beta.3') }#
#% endif %#
#% if agentgateway_enabled | default(false) %#

  - name: agentgateway-crds
    namespace: agentgateway-system
    chart: oci://cr.agentgateway.dev/charts/agentgateway-crds
    version: #{ agentgateway_version | default('v2.2.0-beta.3') }#

  - name: agentgateway
    namespace: agentgateway-system
    chart: oci://cr.agentgateway.dev/charts/agentgateway
    version: #{ agentgateway_version | default('v2.2.0-beta.3') }#
#% endif %#
#% if envoy_gateway_enabled | default(false) %#

  - name: envoy-gateway
    namespace: network
    chart: oci://mirror.gcr.io/envoyproxy/gateway-helm
    version: v1.6.1
#% endif %#

  - name: kube-prometheus-stack
    namespace: observability
    chart: oci://ghcr.io/prometheus-community/charts/kube-prometheus-stack
    version: 80.4.2
